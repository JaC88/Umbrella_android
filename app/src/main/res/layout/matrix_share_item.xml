<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/form_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_form"
        android:drawablePadding="@dimen/font_small"
        android:gravity="center_vertical"
        android:text="Forms"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/form_line"
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/grey_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_type" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/checklist_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_checklist"
        android:drawablePadding="@dimen/font_small"
        android:drawableTint="@color/umbrella_green"
        android:gravity="center_vertical"
        android:text="Checklist"
        app:layout_constraintTop_toBottomOf="@id/form_line"/>

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="right"
        android:layout_marginTop="4dp"
        android:background="@color/grey_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checklist_type" />


</androidx.constraintlayout.widget.ConstraintLayout>